.person {
  width: 66rpx;
  height: 150rpx;
  background: white;
  padding: 20rpx;
  border-radius: 50rpx;
  position: fixed;
  left: 0rpx;
  right: 0;
  margin: 0 auto;
  bottom: -80rpx;
}

.value {
  width: 66rpx;
  height: 66rpx;
}

.box {
  position: fixed;
  width: 80%;
  height: 100%;
  background: white;
  right: 100%;
  z-index: 10;
  padding: 10rpx;
}

.backg{
  position: fixed;
  width: 100%;
  height: 100%;
  background: black;
  opacity: 0.5;
  z-index: 8;
}

.box_out {
  right: 20%;
  animation: out 0.5s;
}

@keyframes out {
  from {
    right: 100%;
  }

  to {
    right: 20%;
  }
}

.box_in {
  right: 100%;
  animation: in 0.5s;
}

@keyframes in {
  from {
    right: 20%;
  }

  to {
    right: 100%;
  }
}

.box .tab{
  display: flex;
  width: 44%;
  margin: 0 auto;
  text-align: center;
  font-size: 28rpx;
  justify-content: space-between;
  padding: 10rpx;
}

.box .tab .l{
  border-top-left-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
  padding: 10rpx;
}

.box .tab .r{
  border-top-right-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
  padding: 10rpx;
}

.box .tab .selected{
  background: black;
  color: white;
}
