.person {
  width: 66rpx;
  height: 150rpx;
  background: white;
  padding: 20rpx;
  border-radius: 50rpx;
  position: fixed;
  left: 0rpx;
  right: 0;
  margin: 0 auto;
  bottom: -80rpx;
}

.value {
  width: 66rpx;
  height: 66rpx;
}

.box {
  position: fixed;
  width: 80%;
  height: 100%;
  background: white;
  right: 100%;
  z-index: 10;
  padding: 10rpx;
}

.backg {
  position: fixed;
  width: 100%;
  height: 100%;
  background: black;
  opacity: 0.5;
  z-index: 8;
}

.box_out {
  right: 20%;
  animation: out 0.5s;
}

@keyframes out {
  from {
    right: 100%;
  }

  to {
    right: 20%;
  }
}

.box_in {
  right: 100%;
  animation: in 0.5s;
}

@keyframes in {
  from {
    right: 20%;
  }

  to {
    right: 100%;
  }
}


.more {
  background: white;
  padding: 10rpx 20rpx;
  position: fixed;
  right: 20rpx;
  top: 20rpx;
  display: flex;
  align-items: center;
}

.more .img {
  height: 50rpx;
  width: 50rpx;
  margin-left: 10rpx;
}
