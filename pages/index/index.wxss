.post {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 100rpx;
  border: 1px solid white;
  margin: 0 auto;
  width: 25%;
  border-radius: 20rpx;
  background: white;
  color: black;
  padding: 25rpx 20rpx;
  text-align: center;
}

.person {
  width: 66rpx;
  height: 66rpx;
  background: white;
  padding: 20rpx;
  border-radius: 50%;
  position: fixed;
  left: 20rpx;
  bottom: 100rpx;
}

.value {
  width: 66rpx;
  height: 66rpx;
}

.box{
  position: fixed;
  left: 0;
  width: 80%;
  height: 100%;
  background: red;
}
